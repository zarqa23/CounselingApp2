<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rootArea"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/otpHTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:text="Code"
            android:textAllCaps="true"
            android:textColor="@color/textview_secondary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/otpTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Resend in 50s"
            android:textAllCaps="false"
            android:textColor="@color/textview_secondary_dark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otpCodeArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_otp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_otp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_border"
                android:backgroundTint="@color/edittext_back"
                android:hint="0"
                android:inputType="number"
                android:letterSpacing="0.2"
                android:maxLength="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_otp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_border"
                android:backgroundTint="@color/edittext_back"
                android:hint="0"
                android:inputType="number"
                android:letterSpacing="0.2"
                android:maxLength="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_otp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_border"
                android:backgroundTint="@color/edittext_back"
                android:hint="0"
                android:inputType="number"
                android:letterSpacing="0.2"
                android:maxLength="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_otp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_border"
                android:backgroundTint="@color/edittext_back"
                android:hint="0"
                android:inputType="number"
                android:letterSpacing="0.2"
                android:maxLength="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_otp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_border"
                android:backgroundTint="@color/edittext_back"
                android:hint="0"
                android:inputType="number"
                android:letterSpacing="0.2"
                android:maxLength="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otp6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_otp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_border"
                android:backgroundTint="@color/edittext_back"
                android:hint="0"
                android:inputType="number"
                android:letterSpacing="0.2"
                android:maxLength="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</LinearLayout>