<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="290dp"
        app:cardCornerRadius="12dp"

        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemHTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All your favorites"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/appTheme_secondary_dark"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/itemVTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get all your loved foods in one once place,
you just place the orer we do the rest"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginVertical="12dp"
        android:textColor="@color/appTheme_accent_light"
        />


</LinearLayout>