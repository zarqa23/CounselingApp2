<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="8dp"
            android:translationZ="5dp"
            app:cardCornerRadius="100dp"
            android:backgroundTint="@color/white"
            app:cardElevation="8dp"
            >
            <ImageView
                android:id="@+id/chatArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_chat_fab"
                android:padding="10dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/appTheme_light_blue"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            app:cardElevation="8dp"
            >
            <LinearLayout
                android:id="@+id/rootLayArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    android:layout_marginHorizontal="10dp"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/providers"
                        android:background="@color/appTheme_accent_light"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="5dp"
                    >
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Counselor Name"
                        android:textSize="16sp"
                        android:textColor="@color/textview_secondary_dark"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Module:"
                            android:textSize="14sp"
                            android:textColor="@color/textview_accent"
                            />
                        <TextView
                            android:id="@+id/qualif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Career Counselor"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/textview_accent"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="3dp"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specialization:"
                            android:textSize="14sp"
                            android:textColor="@color/textview_accent"
                            />
                        <TextView
                            android:id="@+id/specializ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Counselor Specialization"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/textview_accent"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs"
                            android:textSize="14sp"
                            android:layout_marginEnd="4dp"
                            android:textColor="@color/appTheme_success"
                            />
                        <TextView
                            android:id="@+id/charges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/appTheme_success"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>